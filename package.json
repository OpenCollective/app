{
  "name": "open-collective-mobile-app",
  "engines": {
    "node": "5.1.0",
    "npm": "3.3.12"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify",
      "cssnextify"
    ]
  },
  "scripts": {
    "start": "NODE_CONFIG_DIR=./server/config node server",
    "dev": "PORT=3000 nf start -j Procfile_dev",
    "hint": "eslint '**/*.js' --quiet",
    "test:unit": "NODE_CONFIG_DIR=./server/config NODE_ENV=test mocha test/unit/ --opts test/unit/mocha.opts",
    "pretest": "npm run hint",
    "test": "npm run test:unit",
    "posttest": "npm run nightwatch",
    "nightwatch": "./node_modules/nightwatch/bin/nightwatch --config nightwatch.json",
    "build": "npm run build:js && npm run build:css",
    "build:js": "NODE_ENV=production browserify client.js | uglifyjs -cm > static/bundle.js",
    "build:css": "cssnext static/css/main.css static/build.css",
    "watch:css": "cssnext --watch static/css/main.css static/build.css -v",
    "watch:js": "NODE_ENV=development watchify client.js -o static/bundle.js -dv",
    "watch:test": "NODE_ENV=test mocha test/unit/ --opts test/unit/mocha.opts --watch",
    "postinstall": "npm run build",
    "git:clean": "git branch --merged | grep -v \\* | grep -v master | grep -v dev | xargs -n 1 git branch -d",
    "testserver": "NODE_ENV=test_server npm start"
  },
  "dependencies": {
    "babelify": "^6.1.3",
    "basscss": "^7.0.4",
    "body-parser": "^1.14.1",
    "browserify": "^10.2.6",
    "chai": "^3.4.1",
    "classnames": "^2.2.0",
    "config": "^1.16.0",
    "cssnext": "^1.8.4",
    "cssnextify": "^1.0.3",
    "ecstatic": "~0.8.0",
    "ejs": "^2.3.4",
    "envify": "^3.4.0",
    "express": "^4.13.3",
    "express-server-status": "*",
    "history": "^1.17.0",
    "isomorphic-fetch": "^2.1.1",
    "joi": "^6.9.1",
    "jwt-decode": "^1.4.0",
    "jwt-simple": "^0.3.1",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "moment": "^2.10.6",
    "morgan": "^1.6.1",
    "nock": "^2.15.0",
    "normalizr": "^1.0.0",
    "numbro": "^1.6.2",
    "query-string": "^3.0.0",
    "react": "~0.14.0",
    "react-body-classname": "^1.0.1",
    "react-datepicker": "^0.15.2",
    "react-dom": "^0.14.0",
    "react-onclickoutside": "^4.5.0",
    "react-radio-group": "^2.2.0",
    "react-redux": "^3.1.0",
    "react-router": "^1.0.2",
    "react-stripe-checkout": "^1.7.2",
    "redux": "^3.0.2",
    "redux-logger": "^2.0.0",
    "redux-router": "^1.0.0-beta3",
    "redux-thunk": "^1.0.0",
    "request": "^2.65.0",
    "robots.txt": "^1.1.0",
    "serve-favicon": "^2.3.0",
    "supertest": "^1.1.0",
    "uglify-js": "^2.4.24",
    "watchify": "^3.2.3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.5",
    "chai": "^3.3.0",
    "chai-spies": "^0.7.1",
    "chromedriver": "^2.20.0",
    "eslint": "^1.9.0",
    "eslint-config-rackt": "^1.1.1",
    "eslint-plugin-react": "^3.9.0",
    "expect": "^1.11.1",
    "jscs": "^2.1.1",
    "jsdom": "3.1.2",
    "localmockage": "0.0.1",
    "loose-envify": "^1.1.0",
    "mocha": "^2.3.3",
    "nightwatch": "^0.8.15",
    "react-addons-test-utils": "^0.14.0",
    "react-unit": "^1.0.8",
    "redux-devtools": "^2.1.5",
    "redux-mock-store": "0.0.6",
    "sinon": "^1.17.2"
  }
}
