{
  "name": "open-collective-mobile-app",
  "browserify": {
    "transform": [
      "babelify",
      "envify",
      "cssnextify"
    ]
  },
  "scripts": {
    "start": "node server",
    "dev": "PORT=3000 foreman start -f Procfile_dev",
    "test": "mocha --compilers js:babel/register --recursive",
    "hint": "./node_modules/.bin/jscs **/*.js --config=.jscsrc",
    "build": "npm run build:js && npm run build:css",
    "build:js": "NODE_ENV=production browserify main.js | uglifyjs -cm > public/bundle.js",
    "build:css": "cssnext public/css/main.css public/build.css",
    "watch:css": "cssnext --watch public/css/main.css public/build.css -v",
    "watch:js": "NODE_ENV=development watchify main.js -o public/bundle.js -dv",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "babelify": "^6.1.3",
    "basscss": "^7.0.4",
    "browserify": "^10.2.6",
    "cssnext": "^1.8.4",
    "cssnextify": "^1.0.3",
    "ecstatic": "~0.8.0",
    "envify": "^3.4.0",
    "express": "^4.13.3",
    "history": "^1.12.3",
    "isomorphic-fetch": "^2.1.1",
    "jwt-decode": "^1.4.0",
    "lodash": "^3.10.1",
    "moment": "^2.10.6",
    "normalizr": "^1.0.0",
    "numeral": "^1.5.3",
    "react": "~0.13.3",
    "react-datepicker": "^0.13.0",
    "react-redux": "^3.0.1",
    "react-router": "^1.0.0-rc3",
    "redux": "^3.0.2",
    "redux-logger": "^2.0.0",
    "redux-router": "^1.0.0-beta3",
    "redux-thunk": "^1.0.0",
    "uglify-js": "^2.4.24",
    "watchify": "^3.2.3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "chai": "^3.3.0",
    "chai-spies": "^0.7.1",
    "expect": "^1.11.1",
    "jscs": "^2.1.1",
    "jsdom": "3.1.2",
    "mocha": "^2.3.3",
    "react-unit": "^1.0.8",
    "redux-devtools": "^2.1.5"
  }
}
